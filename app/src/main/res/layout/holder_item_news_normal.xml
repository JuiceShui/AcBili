<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/cv_item_news_container"
	app:cardBackgroundColor="#ffffff"
	android:layout_marginBottom="@dimen/space_5"
	app:cardElevation="@dimen/space_20"
	android:foreground="@drawable/cardview"
	app:cardCornerRadius="20dp"
	>
	<LinearLayout
		android:layout_marginTop="@dimen/space_4"
		android:layout_marginLeft="@dimen/space_4"
		android:layout_marginRight="@dimen/space_4"
		android:layout_marginBottom="@dimen/space_5"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView  
        android:layout_width="100dp"
        android:layout_margin="2dp"
        android:layout_height="74dp"
        android:id="@+id/iv_item_new_normal"
        android:layout_gravity="center"
        android:padding="3dp"
       />
	<RelativeLayout 
	    android:id="@+id/rl_title_content"
	    android:layout_toRightOf="@id/iv_item_new_normal"
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginBottom="3dp"
	    android:background="#fff">	 
	    <TextView 
		    android:id="@+id/tv_title"
		    android:text="aaaaaa"
		     android:maxLines="1"
		   	android:gravity="center_horizontal"
		    android:textColor="#000"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:ellipsize="end"
		    android:textSize="@dimen/text_size_18"
		    />
	    <TextView 
	        android:layout_below="@id/tv_title"
		    android:id="@+id/tv_content"
		    android:text="aaaaaqqaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
		    android:layout_marginLeft="2dp"
		    android:layout_marginRight="2dp"
		    android:layout_marginTop="3dp"
		   	android:gravity="center_horizontal"
		    android:textColor="#000"
		    android:maxLines="2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:ellipsize="end"
		    android:textSize="@dimen/text_size_12"
		    />
	    <LinearLayout 
	     	android:layout_below="@id/tv_content"
	        android:orientation="horizontal"
	        android:id="@+id/ll_count"
	        android:gravity="center_vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentBottom="true">
	        <ImageView
	             android:id="@+id/iv_count"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/ic_comment_count"
	            />
	        <TextView 
	             android:id="@+id/tv_count"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="1100"/>
	    </LinearLayout>
	</RelativeLayout>		
	</RelativeLayout>
		<!-- 加条线
	 <View 
	    android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8000"/>
        -->
	</LinearLayout>
</android.support.v7.widget.CardView>
