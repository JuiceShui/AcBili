<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="3dp"
	android:background="#ffffff"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView  
        android:layout_width="100dp"
        android:layout_margin="2dp"
        android:layout_height="114dp"
        android:id="@+id/iv_item_drug_normal"
        android:layout_gravity="center"
        android:padding="3dp"
       />
	<RelativeLayout 
	    android:id="@+id/rl_title_content"
	    android:layout_toRightOf="@id/iv_item_drug_normal"
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginBottom="3dp"
	    android:background="#fff">	 
	    <TextView 
	        android:textColor="@color/color_green"
		    android:id="@+id/tv_drug_title"
		    android:text="aaaaaa"
		     android:maxLines="1"
		   	android:gravity="center_horizontal"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:ellipsize="end"
		    android:textSize="@dimen/text_size_18"
		    />
	    <TextView 
	        android:gravity="center_horizontal"
	        android:textColor="@color/color_green"
		    android:id="@+id/tv_drug_price"
		    android:layout_toRightOf="@id/tv_drug_title"
		    android:text="aaaaaa"
		     android:maxLines="1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:ellipsize="end"
		    android:textSize="@dimen/text_size_14"
		    />
	    <TextView 
	        android:layout_below="@id/tv_drug_title"
		    android:id="@+id/tv_drug_keyword"
		    android:text="aaaaaqqaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
		    android:layout_marginLeft="2dp"
		    android:layout_marginRight="2dp"
		    android:layout_marginTop="3dp"
		   	android:gravity="center_horizontal"
		    android:textColor="#000"
		    android:maxLines="1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:ellipsize="end"
		    android:textSize="@dimen/text_size_14"
		    />
	    <TextView 
	        android:layout_below="@id/tv_drug_keyword"
		    android:id="@+id/tv_drug_content"
		    android:text="aaaaaqqaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
		    android:layout_marginLeft="2dp"
		    android:layout_marginRight="2dp"
		    android:layout_marginTop="3dp"
		   	android:gravity="center_horizontal"
		    android:textColor="#000"
		    android:maxLines="2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:ellipsize="end"
		    android:textSize="@dimen/text_size_12"
		    />
	     <LinearLayout 
	     	android:layout_below="@id/tv_drug_content"
	        android:orientation="horizontal"
	        android:id="@+id/ll_tag"
	        android:gravity="center_vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	       >
	        <TextView 
	             android:id="@+id/tv_drug_tag"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/text_size_14"
	            android:text="sadsadsadsadsadsad"/>
	    </LinearLayout>
	    <LinearLayout 
	     	android:layout_below="@id/ll_tag"
	        android:orientation="horizontal"
	        android:id="@+id/ll_count"
	        android:gravity="center_vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentBottom="true">
	        <ImageView
	             android:id="@+id/iv_drug_count"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/ic_comment_count"
	            />
	        <TextView 
	             android:id="@+id/tv_drug_count"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="1100"/>
	    </LinearLayout>
	</RelativeLayout>		
	</RelativeLayout>
	 <View 
	    android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8000"/>
</LinearLayout>
