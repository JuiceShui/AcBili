<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	xmlns:shui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_fragmentNewsContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical" >

    <LinearLayout
    android:layout_marginBottom="@dimen/space_5"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg_selector"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:orientation="vertical" >
    <acbili.shui.com.view.RatioLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        shui:ratio="2.44"
        >
    <ImageView
        android:id="@+id/iv_fragment_news_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/default_load"/>
    </acbili.shui.com.view.RatioLayout>
    <TextView

        android:gravity="center"
        android:id="@+id/tv_fragment_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:padding="5dp"
        android:text="标题"
        android:textSize="@dimen/text_size_18"
        />
    <TextView

        android:gravity="center"
        android:id="@+id/tv_fragment_news_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="内容"
        android:textSize="14sp"
        />
    <RelativeLayout
        android:id="@+id/rl_fragment_news_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_fragment_news_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_fragment_news_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_down" />
    </RelativeLayout>
	</LinearLayout>
</LinearLayout>
